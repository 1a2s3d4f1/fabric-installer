                     </right>
                     <center>
                        <ImageView fitHeight="46.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                           <image>
                              <Image url="@icon.png" />
                           </image>
                        </ImageView>
                     </center>
                  </BorderPane>
               </top>
               <bottom>
                  <BorderPane prefHeight="28.0" prefWidth="415.0" BorderPane.alignment="CENTER">
